@using Microsoft.AspNetCore.Components

<div class="collapsible-section">
    <div class="collapsible-header" @onclick="Toggle">
        <span style="@HeaderColorClass">@Title</span>
        <div class="icons">
@*             <i class="fa-solid fa-plus" style="display:@(IsExpanded ? "none" : "inline")"></i>
            <i class="fa-solid fa-minus" style="display:@(IsExpanded ? "inline" : "none")"></i> *@
            <i class="fa-solid fa-plus" style="display:@(IsExpanded ? "none" : "inline")"   ></i>
            <i class="fa-solid fa-minus" style="display:@(IsExpanded ? "inline" : "none")   "></i>
        </div>
    </div>
    <div class="collapsible-content" style="@(IsExpanded ? "max-height: 500px; padding: 20px;" : "max-height: 0; padding: 0 20px;")">
        @* @ChildContent *@
        @Content
    </div>
</div>

@code {
    [Parameter]
    public string? Title { get; set; }
    [Parameter]
    public string? HeaderColor { get; set; } = "color: red;";
    private string HeaderColorClass => HeaderColor != null ? $"color: {HeaderColor.ToLower()}" : "";

    // [Parameter]
    // public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Content { get; set; }

    private bool IsExpanded { get; set; } = false;

    private void Toggle()
    {
        IsExpanded = !IsExpanded;
    }



}
















